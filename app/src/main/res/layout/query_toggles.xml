<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/queryImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_image"
            android:tint="@color/tileIconSelected" />

        <ImageView
            android:id="@+id/queryAudio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_audio"
            android:tint="@color/tileIconSelected" />

        <ImageView
            android:id="@+id/query3D"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_3d"
            android:tint="@color/tileIconSelected" />

        <ImageView
            android:id="@+id/queryMotion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_motion"
            android:tint="@color/tileIconSelected" />

        <ImageView
            android:id="@+id/queryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_text"
            android:tint="@color/tileIconSelected" />

        <ImageView
            android:id="@+id/queryLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tileNormal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_spatial"
            android:tint="@color/tileIconSelected" />
    </LinearLayout>
</merge>